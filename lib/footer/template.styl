@import "assets/resources.styl"

.facebook
	color #46629E
	cursor pointer
	&:after
		content "Facebook"
.twitter
	color #1DA1F2
	cursor pointer
	&:after
		content "Twitter"
.youtube
	color #E62117
	cursor pointer
	&:after
		content "Youtube"
.lower
	text-transform lower
.Footer
	display block
	background borderListMobile
	width 100%
	border-top .8em solid green
	padding-bottom 3em
	&-container
		margin-top 2em
	&-networking
		display block
	&-networkingItem
		list-style none
	&-networkingLink
		text-decoration none
		color white
		font-size 1.5em
		text-transform capitalize
		&:before
			margin-right 1em
		&:hover
			color greenBorder
	&-item
		list-style none
		display block
		margin .5em 0
		font-size .8em
	&-contactList
		list-style none
	&-contactLink
		padding .5em
		display block
		text-decoration none
		color white
		font-size 1em
		text-transform lower
		&:hover
			color greenBorder
	&-link
		padding .5em
		display block
		text-decoration none
		color white
		font-size 1em
		text-transform capitalize
		&:hover
			color green
		&:before
			margin-right 1em
	&-contentImage
		text-align center
	&-image
		margin 0 .5em
		display inline-block
	&-contentLegent
		text-transform uppercase
		color white
		font-size .8em
		margin-top 1em
@media screen and (min-width 768px)

	.facebook
		color #46629E
		&:after
			content ""
	.twitter
		color #1DA1F2
		&:after
			content ""
	.youtube
		color #E62117
		&:after
			content ""

	.Footer
		&-networkingList
			text-align center
		&-networkingItem
			display inline-block
			margin 0
			padding 0
		&-networkingLink
			font-size 2em
		&-list
			text-align center
		&-item
			display inline-block
			margin 0
			padding 0
			border-right 1px solid white
			&:last-of-type
				border-right 1px solid borderListMobile
		&-contactList
			text-align center
		&-contactItem
			display inline-block
			margin 0
			padding 0
			border-right 1px solid white
			&:last-of-type
				border-right 1px solid borderListMobile
		&-contactLink
			padding .5em
			display block
			text-decoration none
			color white
			font-size 1em
			&:before
				margin-right 1em