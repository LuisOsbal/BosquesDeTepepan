@import "assets/resources.styl"
@import "assets/icomoon.styl"

.Contact
	width 100%
	display block
	&-container
		position relative
		height 100%
		display block
	&-images
		background url('../images/landing/architecture.jpg') fixed
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		position relative
		width 100%
		z-index 1
	&-title
		margin 0
		padding 3em .5em 0 .5em
		text-transform uppercase
		font-size 1.5em
		font-weight 700
		color white
	&-paragraph
		color white
		padding 0 1em
		font-size 1.1em
	&-containerForm
		display block
	&-contactForm
		display block
		margin 0 1em
	&-label
		color white
		padding 0 1em
		font-size 1.1em
		text-transform capitalize
	&-contactInput
		font-size 22px
		display block
		width 100%
		height 100%
		background none
		background-image none
		border 1px solid grayBackground
		color white
		border-radius 0
		transition border-color .25s ease, box-shadow .25s ease
		&:focus
			border 2px solid green
			box-sizing border-box
	&-contactArea
		font-size 22px
		display block
		width 100%
		height 100px
		background none
		background-image none
		border 1px solid grayBackground
		color white
		border-radius 0
		transition border-color .25s ease, box-shadow .25s ease
		vertical-align top
		&:focus
			border 2px solid green
			box-sizing border-box
	&-contactButton
		display block
		background green
		color black
		font-weight bold
		border-bottom 4px solid greenBorder
		border-radius 10px
		text-decoration none
		width 100%
		margin 1em 0
		height 3em
		&:hover
			background greenBorder
			color white
@media screen and (min-width 768px)
	.Contact
		&-title
			margin 0
			padding 3.5em .5em 1em .5em
			font-size 2.5em
		&-containerForm
			margin 0 2em
@media screen and (min-width 1024px)
	.Contact
		&-title
			margin 0
			padding 2em .5em 1em .5em
			font-size 2.5em
		&-containerForm
			margin 0 8em
			padding-bottom 2em
		&-contactButton
			width 300px