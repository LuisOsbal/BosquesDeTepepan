@import "assets/resources.styl"
@import "assets/icomoon.styl"

.Counter
	&-images
		background url('../images/background-Luis-Osnaya.jpg') fixed
		background-position center
		background-repeat no-repeat
		background-size cover	
		height 100%
		display block
		position relative
		width 100%
		z-index 1
	&-container
		position relative
		height 100%
		padding 1em
		display block
	&-containerWrapper
		height 100%
	&-wrapper
		width 100%
		height 200px
		display block
		margin-top 1em
	&-wrapperNumber
		font-size 2.5em
	&-wrapperText
		font-size 1.5em
		color white
		text-align center
		text-transform capitalize
	&-item
		color white
		text-align center
	&-icon
		width 100px
		margin-top 2em
	&-wrapperIcon
		font-size 4em
		margin-top .7em
@media screen and (min-width 768px)
	.Counter
		&-containerWrapper
			text-align center
		&-wrapper
			width 15em
			height 15em
			display inline-block
			margin .5em 1em